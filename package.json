{
  "name": "cpapp",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^5",
    "@sap/xssec": "^3.2.12",
    "express": "^4",
    "hdb": "^0.18.3",
    "passport": "^0.5.2",
    "save": "^2.4.0"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.96.2",
    "sqlite3": "^5.0.2"
  },
  "engines": {
    "node": "^16"
  },
  "scripts": {
    "start": "cds run",
    "watch-risks": "cds watch --open risks/webapp/index.html#fe-lrop-v4",
    "watch-mitigations": "cds watch --open mitigations/webapp/index.html#fe-lrop-v4"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "sapux": [
    "app/risks"
  ],
  "cds": {
    "requires": {
      "db": {
        "kind": "sql"
    },
    "uaa": {
      "kind": "xsuaa",
      "credentials": {}

    },
    "hana": {
      "deploy-format": "hdbtable"
    }
    }
  }
}
